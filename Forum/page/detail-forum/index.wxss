
.container{
    background: #fff;
}
.header{
    border-bottom: 2rpx solid #eee; 
}
/*front*/
.front{
    padding: 30rpx 30rpx 0 30rpx;
    position: relative;
}
.front .title{
    font-size: 40rpx;
    color: #000000;
    line-height: 56rpx;
}
.front .timeAndTag{
    margin-top: 20rpx;
}
.front .title-time{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #888888;
    letter-spacing: 0;
    line-height: 26rpx;
    
}
.front .tag{
    border: 2rpx solid #FF9300;
    border-radius: 4rpx;
    padding: 0 6rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #FF9300;
    letter-spacing: 0;
    line-height: 20rpx;
    margin-left: 20rpx;
}

.titleContent{
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #353535;
    letter-spacing: 0;
    line-height: 48rpx;
    margin-top: 24rpx;
}
.front .perfect{
    position: absolute;
    right: 0;
    top: 22rpx;
}
.front .perfect image{
    width: 128rpx;
    height: 160rpx;  
}