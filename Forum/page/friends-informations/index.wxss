.friends-header{
    height: 374rpx;
    background: #375697;
}
.friends-personal{
    padding-top: 34rpx;
    text-align: center;
}
.friends-photo{
    width: 132rpx;
    height: 132rpx;
    border: 2px solid #FFFFFF;
    border-radius:50%; 
}
.friends-name{
    font-family:PingFangSC-Regular;
    font-size: 34rpx;
    color: #FFFFFF;
    line-height: 34rpx;
    margin-top: 20rpx;
}
.friends-integral{
    float: left;
    width: 50%;
    text-align: right;
    line-height: 26rpx;
    margin-top: 20rpx;
}
.friends-integral text{
    padding-right: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    
}
.friends-levels{
    float: right;
    width: 50%;
    line-height: 26rpx;
    margin-top: 20rpx;
}
.friends-levels text{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
}
.friends-fans{
    float: left;
    width: 50%;
    text-align: center;
    line-height: 28rpx;
    margin-top: 30rpx;
}
.friends-fans text{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0;
}
.friends-attention{
    float: right;
    width: 50%;
    text-align: center;
    line-height: 28rpx;
    margin-top: 30rpx;
}
.friends-attention text{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0;
}
.friends-attention:before{
    float: left;
    height: 28rpx;
    content: '';
    border-left: 1rpx solid #fff;
}
.friends-forum{
    height: 68rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
    background: #fff;
    padding-top: 20rpx;
    font-size: 32rpx;
    color: #B2B2B2;
    letter-spacing: 0.46rpx; 
}
.friends-post{
    float: left; 
    width: 50%;
}
.friends-replies{
    float: right;
    width: 50%; 
}
.change{
    font-size: 36rpx;
    color: #215C9E;
    letter-spacing: 0.52rpx;
}

.friends-front{
    display: block;
    background: #fff;
    margin-top: 20rpx;
}
.friends-content{
    height: 118rpx;
    margin-left: 20rpx;
    border-bottom: 2rpx solid #E5E5E5;
}
.contentBigger{
    height: 166rpx;
}
.content-title{
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 32rpx;
    padding-top: 22rpx;
    min-height: 32rpx;
}
.content-time{
    float: left;
    font-family: FZLTXHK;
    font-size: 24rpx;
    color: #888888;
    margin-top: 20rpx;
    line-height: 24rpx;
}
.content-replies{
    float: right;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #B2B2B2;
    line-height: 24rpx;
    padding-top: 18rpx;
    padding-right: 22rpx;
}

.friends-add{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    background: #375697;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    text-align: center;
    line-height: 88rpx;
    color: #FFFFFF;
}

.contentBigger-title{
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 48rpx;
}
