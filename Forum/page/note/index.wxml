<scroll-view scroll-y="true">
    <!--评论-->
<!--     <block wx:for="{{noteList}}"> -->

    <view class="container">
        <view class="header">
            <image src="{{noteList.thread.avatar}} "class="avatar"></image>
            <view class="user-info">
                <view class="user-wrap">
                    <text class="name">{{noteList.thread.author}}</text>
                    <text class="level grade{{noteList.thread.score.level}}"></text>
                </view>
            </view> 
            <view class="browse">{{noteList.thread.views}}</view>
        </view>
        <view class="front">
            <text class="title">{{noteList.thread.subject}}</text>
            <view class="timeAndTag">
                <text class="title-time">{{noteList.thread.dateline}}</text>
                <text class="tag">{{noteList.thread.className}}</text>
            </view>
            <view class="titleContent"><text>{{noteList.thread.text}}</text></view>
            <view class="perfect">
                <image src="../../resources/image/perfect.png"></image>
            </view>
            <view class="perfect" wx:if="{{noteList.thread.digest > 0 && noteList.thread.digest !== 2}}">
                <image src="../../resources/image/perfect.png"></image>
            </view>
            <view class="perfect" wx:if="{{noteList.thread.digest == 2}}">
                <image src="../../resources/image/perfect.png"></image>
            </view>
        </view>
    </view>


    <!-- </block> -->
</scroll-view>
