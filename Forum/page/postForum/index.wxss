.post-title{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #215C9E;
  letter-spacing: 0;
  line-height: 28rpx;
  padding: 32rpx 674rpx 10rpx 20rpx;
}
.post-input{
  width: 720rpx;
  height: 88rpx;
  background: #fff;
  padding-left: 30rpx;
}
.post-maintext{
  width: 100%;
  height: 320rpx;
  background: #fff;
}
.post-textarea{
  width: 690rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.post-sync{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 22rpx;
  padding: 22rpx 450rpx 40rpx 20rpx;
}
.post-forum{
  display: inline-block;
  position: relative;
  border: 1rpx solid #A2B4CC;
  border-radius: 8rpx;
  font-family: .PingFang-SC-Regular;
  font-size: 26rpx;
  color: #A2B4CC;
  letter-spacing: 0;
  line-height: 26rpx;
  padding: 24rpx 30rpx 22rpx 30rpx;
  margin-left: 20rpx;
}
.post-first{
  margin-left: 30rpx;
}
.post-click:after{
  position: absolute;
  content: '\e63d';
  font-family: 'forum';
  font-size: 10rpx;
  color: #375697;
  bottom: 0;
  right: 0;
  margin-bottom: 6rpx;
  margin-right: 12rpx;
}
.post-click{
  border: 1rpx solid #375697;
  color: #375697;
}
.post-complete{
  width: 690rpx;
  height: 88rpx;
  background: #375697;
  border: 1rpx solid #2F4B87;
  border-radius: 5px;
  font-family: .PingFang-SC-Regular;
  font-size: 36rpx;
  color: #FFFFFF;
  margin-top: 100rpx;
}
.post-keyboard{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.post-select{
  height: 70rpx;
  border-bottom: 4rpx solid #eee;
}
.post-commen{
  display: inline-block;
  padding-left: 40rpx;
}
.post-feels{
  padding-left: 30rpx;
}
.post-feels:before{
  content: '\e638';
  font-family: 'forum';
  font-size: 38rpx;
  line-height: 70rpx;
  color: #B2B2B2;
}
.post-pic:before{
  content: '\e643';
  font-family: 'forum';
  font-size: 36rpx;
  line-height: 70rpx;
  color: #B2B2B2;
}
.post-photo:before{
  content: '\e645';
  font-family: 'forum';
  font-size: 36rpx;
  line-height: 70rpx;
  color: #B2B2B2;
}
.post-selectPhoto{
  position: relative;
  border: 1rpx dashed #DDDDDD;
  border-radius: 4rpx;
}
.post-selectPhoto:before{
  display: block;
  content: '\e632';
  font-family: 'forum';
  font-size: 42rpx;
  color: #DDD;
  text-align: center;
  line-height: 120rpx;
}
.post-keyContent{
  height: 390rpx;
}
.images-list{
  display: flex;
  flex-wrap: wrap;
}
.post-selectPhoto-image{
  width: 120rpx;
  height: 120rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
