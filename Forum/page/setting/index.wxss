.about{
    position: relative;
    background: #fff;
    height: 96rpx;
    margin-top: 42rpx; 
}
.about .about-us{
    font-size: 34rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 96rpx;
    margin-left: 20rpx;
}
.about:after{
    content: '';
    float: right;
    width: 17rpx;
    height: 17rpx;
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -10rpx;
    margin-right: 42rpx;
    border-top:1rpx solid #B2B2B2; 
    border-right: 1rpx solid #B2B2B2;
    transform: rotate(45deg);
}

.version{
    background: #fff;
    height: 96rpx;
    margin-top: 2rpx; 
    
}
.version-text{
    font-size: 34rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 96rpx;
    margin-left: 20rpx;
}
.version-num{
    float: right;
    font-size: 34rpx;
    color: #888888;
    letter-spacing: 0;
    line-height: 96rpx;
    margin-right: 30rpx;  
}
.exit{
    padding:180rpx 30rpx 0;
}
