@import 'resources/weui.wxss';

@font-face {
  font-family: 'saas';
  src:url('//at.alicdn.com/t/font_1474281008_8263974.woff') format('woff'),
  url('//at.alicdn.com/t/font_1474281008_8263974.ttf') format('truetype')
}

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 20px;
    font-weight: 400;
    color: #09bb07;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
/*---内盒子-----*/
page,
.pageBox,scroll-view{
    height: 100%;
    overflow: hidden;
}
scroll-view{
    -webkit-overflow-scrolling: touch;
}
/*－－－－－－*/

/*---抢线索-----*/
.titlePad{
    width: 70%;
    height: 54px;
    overflow:hidden;
    white-space:normal;
    word-wrap:normal;
    word-break:normal;
}
.btnX{
    position: absolute;
    width: 24%;
    height: 40px;
    border: 1px solid #09bb07;
    top: 30%;
    right: 15px;
    line-height: 40px;
    text-align: center;
    color: #09bb07;
    border-radius: 5px;
}
